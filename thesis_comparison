import streamlit as st
import pandas as pd
from data_loader import load_data
from anova_analysis import run_anova_tests

# ğŸ¨ Titolo dell'app
st.title("Analisi ANOVA con Test Post-Hoc")

# ğŸ“‚ Caricamento del file .xlsx
uploaded_file = st.file_uploader("Carica un file Excel (.xlsx)", type=["xlsx"])

if uploaded_file:
    df = load_data(uploaded_file)  # ğŸ”„ Carica i dati
    if df is not None:
        st.write("ğŸ“Š **Dati caricati:**", df.head())

        # ğŸƒâ€â™‚ï¸ Esegui i test
        results = run_anova_tests(df)

        # ğŸ“ Mostra i risultati in Streamlit
        for test_name, result in results.items():
            st.subheader(test_name)
            st.write(result)
else:
    st.warning("ğŸ“‚ Carica un file Excel per procedere.")
